<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vintélo</title>
    <link rel="stylesheet" href="css/avaliasao.css">
    <link rel="icon" href="/imagens/brilhoescuro.png" type="image/x-icon">
    
</head>
<body>
    <!-- Header Mobile -->
    <header class="mobile-header">
        <nav class="header-nav">
            <a href="javascript:void(0)" class="back-btn">
                <img src="imagens/seta.png" alt="Voltar">
            </a>
            <h1>Avaliações</h1>
            <a href="/carrinho" class="cart-btn">
                <img src="imagens/carrinho.png" alt="Carrinho">
            </a>
        </nav>
    </header>

    <!-- Header Desktop -->
    <header class="desktop-header">
        <section class="top-bar">
            <p>10% OFF na primeira compra</p>
        </section>
        <section class="main-header">
            <a href="/homecomprador">
                <img src="imagens/logo.png" class="logo" alt="Vintélo">
            </a>
            <nav>
                <a href="/categorias">Vestidos</a>
                <a href="/categorias">Saias</a>
                <a href="/categorias">Blusas</a>
                <a href="/categorias">Calças</a>
                <a href="/categorias">Outros</a>
            </nav>
            <section class="search-profile">
                <form>
                    <input type="text" placeholder="Buscar...">
                </form>
                <ul>
                    <li><a href="/carrinho"><img src="imagens/icone saco.png" alt="Sacola"></a></li>
                    <li><a href="/perfilcliente"><img src="imagens/imagem sem cadastro.avif" alt="Perfil"></a></li>
                    <li><a href="/favoritos"><img src="imagens/icone coraçao.png" alt="Favoritos"></a></li>
                </ul>
            </section>
        </section>
    </header>

    <main>
        <!-- Título Padronizado -->
        <section class="page-title">
            <span class="garimpe-text">Avaliações da</span><br>
            <span class="vintelo-text">Vintélo</span>
        </section>
        
        <!-- Navegação por Abas -->
        <section class="tab-navigation">
            <button class="tab-btn active" data-tab="plataforma">Plataforma</button>
            <button class="tab-btn" data-tab="brechos">Brechós</button>
        </section>

        <!-- Seção Avaliações da Plataforma -->
        <section class="tab-content active" id="plataforma">
            <section class="summary">
                <section class="rating-overview">
                    <img src="imagens/brilhoescuro.png" alt="Avaliações" class="rating-img">
                    <section class="rating-stats">
                        <h2><%= (estatisticas.mediaAvaliacoes || 4.8).toFixed(1) %> <span class="stars">★★★★☆</span></h2>
                        <p>Baseado em <%= estatisticas.totalAvaliacoes || 0 %> avaliações</p>
                    </section>
                </section>
                <% if (typeof autenticado !== 'undefined' && autenticado && autenticado.autenticado) { %>
                    <button class="add-review-btn" onclick="toggleReviewForm()">
                        <img src="imagens/editar.png" alt="Adicionar">
                        Avaliar Plataforma
                    </button>
                <% } else { %>
                    <p class="login-message">Faça <a href="/cadastro">cadastro</a> para avaliar</p>
                <% } %>
            </section>
            
            <!-- Lista de Avaliações da Plataforma -->
            <section class="reviews-list">
                <% if (typeof avaliacoes !== 'undefined' && avaliacoes && avaliacoes.length > 0) { %>
                    <% avaliacoes.filter(av => !av.ID_BRECHO_AVALIADO).forEach(function(avaliacao) { %>
                        <section class="review-item">
                            <img src="<%= avaliacao.IMG_URL ? '/' + avaliacao.IMG_URL : '/imagens/imagem sem cadastro.avif' %>" alt="<%= avaliacao.NOME_USUARIO %>" class="profile-pic">
                            <section class="review-content">
                                <section class="review-header">
                                    <h3><%= avaliacao.NOME_USUARIO %></h3>
                                    <span class="review-date"><%= new Date(avaliacao.DATA_AVALIACAO).toLocaleDateString('pt-BR') %></span>
                                </section>
                                <p class="rating"><%= avaliacao.NOTA_AVALIACAO %> 
                                    <span class="stars">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <%= i <= avaliacao.NOTA_AVALIACAO ? '★' : '☆' %>
                                        <% } %>
                                    </span>
                                </p>
                                <p class="review-text"><%= avaliacao.COMENTARIO %></p>
                                <% if (typeof autenticado !== 'undefined' && autenticado && autenticado.autenticado && (autenticado.tipo === 'a' || autenticado.id === avaliacao.ID_USUARIO)) { %>
                                    <section class="review-actions">
                                        <button onclick="excluirAvaliacao(<%= avaliacao.ID_AVALIACAO %>)" class="btn-delete">Excluir</button>
                                    </section>
                                <% } %>
                            </section>
                        </section>
                    <% }); %>
                <% } else { %>
                    <section class="no-reviews">
                        <p>Ainda não há avaliações da plataforma. Seja o primeiro a avaliar!</p>
                    </section>
                <% } %>
            </section>
        </section>

        <!-- Seção Avaliações de Brechós -->
        <section class="tab-content" id="brechos">
            <section class="brechos-list">
                <% if (typeof brechos !== 'undefined' && brechos && brechos.length > 0) { %>
                    <% brechos.forEach(function(brecho) { %>
                        <section class="brecho-card">
                            <img src="<%= brecho.IMG_URL ? '/' + brecho.IMG_URL : '/imagens/imagem sem cadastro.avif' %>" alt="<%= brecho.NOME_USUARIO %>" class="brecho-img">
                            <section class="brecho-info">
                                <h3><%= brecho.NOME_USUARIO %></h3>
                                <p class="brecho-rating">
                                    <%= (brecho.MEDIA_AVALIACOES || 0).toFixed(1) %> 
                                    <span class="stars">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <%= i <= Math.round(brecho.MEDIA_AVALIACOES || 0) ? '★' : '☆' %>
                                        <% } %>
                                    </span>
                                    (<%= brecho.TOTAL_AVALIACOES || 0 %> avaliações)
                                </p>
                                <% if (typeof autenticado !== 'undefined' && autenticado && autenticado.autenticado) { %>
                                    <button class="btn-avaliar" onclick="avaliarBrecho(<%= brecho.ID_USUARIO %>)">Avaliar Brechó</button>
                                <% } %>
                            </section>
                        </section>
                    <% }); %>
                <% } else { %>
                    <section class="no-brechos">
                        <p>Nenhum brechó encontrado para avaliar.</p>
                    </section>
                <% } %>
            </section>
        </section>

        <!-- Formulário de Nova Avaliação -->
        <section class="review-form" id="reviewForm" style="display: none;">
            <h3 id="formTitle">Deixe sua avaliação</h3>
            <form onsubmit="submitReview(event)">
                <input type="hidden" id="brechoId" value="">
                <section class="rating-input">
                    <label>Sua nota:</label>
                    <section class="star-rating">
                        <span class="star" data-rating="1">★</span>
                        <span class="star" data-rating="2">★</span>
                        <span class="star" data-rating="3">★</span>
                        <span class="star" data-rating="4">★</span>
                        <span class="star" data-rating="5">★</span>
                    </section>
                </section>
                <section class="form-group">
                    <label for="reviewText">Seu comentário:</label>
                    <textarea id="reviewText" placeholder="Conte sobre sua experiência..." required></textarea>
                </section>
                <section class="form-actions">
                    <button type="button" onclick="toggleReviewForm()">Cancelar</button>
                    <button type="submit">Publicar</button>
                </section>
            </form>
        </section>


    </main>

    <footer class="footer">
        <img src="imagens/logo2.jpeg" alt="Vintélo" class="footer-image">
        <section class="social-media">
            <p>Siga nossas redes sociais</p>
            <ul class="social-links">
                <li><a href="https://facebook.com" target="_blank"><img src="imagens/Facebook.png" alt="Facebook"></a></li>
                <li><a href="https://twitter.com" target="_blank"><img src="imagens/Pinterest.png" alt="Pinterest"></a></li>
                <li><a href="https://www.instagram.com/vintelobrechos" target="_blank"><img src="imagens/Instagram.png" alt="Instagram"></a></li>
            </ul>
        </section>
        <p class="copyright">©2024 Vintélo. Todos os direitos reservados.</p>
    </footer>
    <script src="/js/perfil-autenticado.js"></script>
    <script src="/js/navegacao.js"></script>
    <script src="/js/push-notifications.js"></script>
    <script src="/js/avaliacao.js"></script>
</body>
</html>