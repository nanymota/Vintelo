      <br>
      <!--                                        barra de pesquisa                                              -->
      <section class="oculto-desktop">
        <section class="search-section">
          <section class="search-container">
            <form class="search-form">
              <button type="button" class="search-icon">
                <img src="imagens/pesquisa.png" alt="Pesquisar">
              </button>
              <input type="text" placeholder="Buscar..." required>
            </form>
          </section>
        </section>
        <script src="/js/script.js"></script>
      </section>
      <br>


      <!--                           Carrossel de banners  desktop                                          -->
      <section class="oculto-mobile">
        <section class="carousel-container">
          <section class="carousel-slide">
            <% if (banners && banners.length > 0) { %>
              <% banners.slice(0, 3).forEach(banner => { %>
                <img src="<%= banner.URL_IMAGEM %>" alt="Banner">
              <% }) %>
            <% } else { %>
              <img src="imagens/banner outono.png" alt="Imagem 1">
              <img src="imagens/banner desk.png" alt="Imagem 2">
              <img src="imagens/banner boss desk.jpg" alt="Imagem 3">
            <% } %>
          </section>
          <section class="carousel-indicators">
            <section class="active"></section>
          </section>
        </section>
      </section>

      <section class="oculto-desktop">
        <section class="carousel-container">
          <section class="carousel-slide">
            <% if (banners && banners.length > 3) { %>
              <% banners.slice(3, 6).forEach(banner => { %>
                <img src="<%= banner.URL_IMAGEM %>" alt="Banner">
              <% }) %>
            <% } else { %>
              <img src="imagens/banner outono mobile.png" alt="Imagem 1">
              <img src="imagens/banner primavera mobile.png" alt="Imagem 2">
              <img src="imagens/banner boss mobile.png" alt="Imagem 3">
            <% } %>
          </section>
          <section class="carousel-indicators">
            <section class="active"></section>
          </section>
        </section>
      </section>
      <!--                                      Carrossel das categorias                                              -->
      
      <!--  Mobile -->
      <nav class="category-nav category-nav-mobile">
      <br>
      <span class="garimpe-text">Garimpe na</span><br>
      <span class="vintelo-text">Vintélo</span>
      <br>
      <ul>
        <li><a href="#" onclick="showSection('novidades')">Novidades</a></li>
        <li><a href="#" onclick="showSection('descontos')">Descontos</a></li>
        <li><a href="#" onclick="showSection('brechos')">Brechós</a></li>
        <li><a href="/categorias">Categorias</a></li>
        <li><a href="#" onclick="showSection('plussize')">Plusize</a></li>
      </ul>
      </nav>

      <!-- Desktop -->
      <nav class="category-nav category-nav-desktop">
        <section class="garimpe-vintelo-container">
          <span class="garimpe-text">Garimpe na</span><br>
          <span class="vintelo-text">Vintélo</span>
        </section>

        <section class="carousel-container">
          <ul>
            <li><a href="#" onclick="showSection('novidades')">Novidades</a></li>
            <li><a href="#" onclick="showSection('descontos')">Descontos</a></li>
            <li><a href="#" onclick="showSection('brechos')">Brechós</a></li>
            <li><a href="/categorias">Categorias</a></li>
            <li><a href="#" onclick="showSection('plussize')">Plusize</a></li>
          </ul>
        </section>
      </nav>
      <!--                                    Seção dos produtos                                              -->
      <nav class="grid-produtos">
        <h3>Novidades</h3>
      </nav>
      <section class="product-grid">
        <% if (produtos && produtos.length > 0) { %>
          <% produtos.slice(0, 4).forEach(produto => { %>
            <article class="product-card">
              <a href="/produto/<%= produto.ID_PRODUTO %>"><img src="<%= produto.URL_IMG ? '/' + produto.URL_IMG : '/imagens/produto-default.png' %>" alt="<%= produto.NOME_PRODUTO %>"></a>
              <h2><%= produto.NOME_PRODUTO %></h2>
              <p class="price">R$ <%= parseFloat(produto.PRECO).toFixed(2).replace('.', ',') %></p>
              <p class="Descrição">ou em 2x de R$ <%= (parseFloat(produto.PRECO) / 2).toFixed(2).replace('.', ',') %></p>
              <button class="favorite" onclick="toggleFavorite(this, <%= produto.ID_PRODUTO %>)"><img src="imagens/coraçao de fav2.png"></button>
              <button class="cart" onclick="addToCart(<%= produto.ID_PRODUTO %>)"><img src="imagens/sacola.png" class="img-sacola"></button>
            </article>
          <% }) %>
        <% } else { %>
          <article class="product-card">
            <a href="/produto2"><img src="imagens/vestido branco.png" alt="Vestido roxo de manga com decote"></a>
            <h2>Vestido branco com decote</h2>
            <p class="price">R$ 49,99</p>
            <p class="Descrição">ou em 2x de R$ 25,00</p>
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <button class="cart" onclick="addToCart(1)"><img src="imagens/sacola.png" class="img-sacola"></button>
          </article>
        <% } %>

        <a href="/categorias" class="oculto-desktop"><span class="ver">Ver tudo</span></a>
      
      </section>

      <!--                                           PRODUTOS OCULTOS                                              -->
