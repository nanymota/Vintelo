          <% if (produtos && produtos.length > 4) { %>
            <% produtos.slice(4, 8).forEach(produto => { %>
              <article class="product-card">
                <a href="/produto/<%= produto.ID_PRODUTO %>"><img src="<%= produto.URL_IMG ? '/' + produto.URL_IMG : '/imagens/produto-default.png' %>" alt="<%= produto.NOME_PRODUTO %>"></a>
                <h2><%= produto.NOME_PRODUTO %></h2>
                <p class="price">R$ <%= parseFloat(produto.PRECO).toFixed(2).replace('.', ',') %></p>
                <p class="Descrição">ou em 2x de R$ <%= (parseFloat(produto.PRECO) / 2).toFixed(2).replace('.', ',') %></p>
                <button class="favorite" onclick="toggleFavorite(this, <%= produto.ID_PRODUTO %>)"><img src="imagens/coraçao de fav2.png"></button>
                <button class="cart" onclick="addToCart(<%= produto.ID_PRODUTO %>)"><img src="imagens/sacola.png" class="img-sacola"></button>
              </article>
            <% }) %>
          <% } else { %>
            <article class="product-card">
              <img src="imagens/cropped flor.png" alt="cropped flor">
              <h2>Cropeed Floral</h2>
              <p class="price">R$49,99</p>
              <p class="Descrição">ou em 2x de R$25,00</p>
              <br>
              <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
              <button class="cart" onclick="addToCart(1)"><img src="imagens/sacola.png" class="img-sacola"></button>
            </article>
          <% } %>

          <a href="/categorias"><span class="ver">Ver tudo</span></a>

        </section>
      </section>

      
      <!--                                        Perfil dos Brechós                                              -->
      <section class="titulo-brecho-section">
        <span class="garimpe-text">Encontre outros</span><br>
        <span class="vintelo-text">Brechós</span>
      </section>
      
      <ul class="brechos-grid">
        <% if (brechos && brechos.length > 0) { %>
          <% brechos.forEach(brecho => { %>
            <li class="profile-item">
              <a href="/brecho/<%= brecho.ID_USUARIO %>">
                <img src="<%= brecho.IMG_URL ? '/' + brecho.IMG_URL : '/imagens/imagem sem cadastro.avif' %>" alt="<%= brecho.NOME_USUARIO %>" class="profile-image">
              </a>
              <section class="profile-info">
                <strong><%= brecho.NOME_USUARIO %></strong>
                <span class="rating"><%= parseFloat(brecho.MEDIA_AVALIACOES).toFixed(1) %> ⭐⭐⭐⭐⭐</span>
              </section>
              <button class="follow-button" onclick="toggleFavoriteBrecho(this, <%= brecho.ID_USUARIO %>)">Favoritar</button>
            </li>
          <% }) %>
        <% } else { %>
          <li class="profile-item">
            <img src="imagens/brecho1.png" alt="Mayte" class="profile-image">
            <section class="profile-info">
              <strong>Mayte</strong>
              <span class="rating">4.9 ⭐⭐⭐⭐⭐</span>
            </section>
            <button class="follow-button" onclick="toggleFavoriteBrecho(this, 1)">Favoritar</button>
          </li>
        <% } %>
      </ul>
        <!--                                       banner de cadastro                                              -->
        <a href="/cadastro">
          <img src="imagens/bannercash.png" class="img-cashback">
        </a>
        <br>
        <br>
        <section class="artigos-section">
          <span class="artigos-title-1">conheça os</span><br>
          <span class="artigos-title">Artigos</span>
          <br>
          <section class="container">
            <!-- Artigo de Moda Metalizada -->
            <article class="artigo">
              <nav class="grid-artigos">
                <img src="imagens/metalizado.png" alt="Moda Metalizada" class="imagem-artigo">
                <section class="artigo-texto">
                  <h3 class="vintelo-text">MODA |</h3>
                  <h3 class="vintelo-text">METALIZADA |</h3>
                  <a href="/cadastro" class="ler-agora">Ler agora</a>
                </section>
              </nav>
            </article>

            <!-- Banner de Cashback -->
            <article class="cashback-banner">

              <img src="imagens/bannercash.png" alt="Ganhe Cashback" class="imagem-banner">
              <section class="cashback-texto">
                <h3>Ganhe Cashback</h3>
                <p>em sua primeira compra</p>
                <a href="/cadastro" class="cadastre-se">Cadastre-se</a>
              </section>
            </article>
          </section>
        </section>
        
        <!--                                        PRODUTOS OCULTOS                                               -->
