<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vintélo</title>
    <link rel="stylesheet" href="css/perfilcliente.css">

    <link rel="icon" href="/imagens/brilhoescuro.png" type="image/x-icon">
    
</head>
<body>
    <!-- Header Desktop -->
    <section class="desktop-header">
        <section class="top-bar">
            <p>10% OFF na primeira compra</p>
        </section>
        <header class="main-header">
            <a href="/homecomprador">
                <img src="imagens/logo.png" class="img-logo" alt="Vintélo">
            </a>
            <nav>
                <a href="/categorias">Vestidos</a>
                <a href="/categorias">Saias</a>
                <a href="/categorias">Blusas</a>
                <a href="/categorias">Calças</a>
                <a href="/categorias">Categorias</a>
            </nav>
            <section class="search-profile">
                <form>
                    <input type="text" placeholder="Buscar...">
                </form>
                <ul>
                    <li><a href="/sacola1"><img src="imagens/icone saco.png" class="img-tamanho" alt="Sacola"></a></li>
                    <li>
                        <% if (typeof autenticado !== 'undefined' && autenticado) { %>
                            <a href="/perfilcliente"><img src="<%= (usuario && usuario.imagem) ? '/' + usuario.imagem : '/imagens/imagem sem cadastro.avif' %>" class="maria" alt="Perfil"></a>
                        <% } else { %>
                            <a href="/menu"><img src="/imagens/imagem sem cadastro.avif" class="maria" alt="Perfil"></a>
                        <% } %>
                    </li>
                    <li><a href="/favoritos"><img src="imagens/icone coraçao.png" class="img-tamanho" alt="Favoritos"></a></li>
                </ul>
            </section>
        </header>
    </section>

    <!-- Header Mobile -->
    <section class="mobile-header">
        <header>
            <nav class="grid">
                <a href="/homecomprador">
                    <img src="imagens/seta.png" alt="Voltar">
                </a>
                <img src="imagens/logo.png" alt="Vintélo">
                <a href="/sacola1">
                    <img src="imagens/carrinho.png" alt="Carrinho">
                </a>
            </nav>
        </header>
    </section>

    <main>
        <section class="container">   
            <section class="content-wrapper">
                <!-- Informações do Perfil -->
                <section class="profile-section">
                    <section class="profile-header">
                        <section class="profile-photo">
                            <img id="profile-img" src="<%= (usuario && usuario.imagem) ? '/' + usuario.imagem : '/imagens/imagem sem cadastro.avif' %>" alt="Foto do perfil">
                            <button class="photo-edit-btn" type="button" onclick="editProfilePhoto()">
                                <span>+</span>
                            </button>
                            <input type="file" id="profile-photo-input" name="foto" accept="image/jpeg,image/jpg,image/png" style="display: none;">
                        </section>
                        <section class="profile-info">
                            <h2 id="profile-name"><%= (usuario && usuario.nome) ? usuario.nome : 'Usuário' %></h2>
                            <p id="profile-email"><%= (usuario && usuario.email) ? usuario.email : 'email@exemplo.com' %></p>
                        </section>
                    </section>

                    <section class="profile-stats">
                        <section class="stat-item">
                            <span class="stat-number">12</span>
                            <span class="stat-label">Compras</span>
                        </section>
                        <section class="stat-item">
                            <span class="stat-number">5</span>
                            <span class="stat-label">Favoritos</span>
                        </section>
                        <section class="stat-item">
                            <span class="stat-number">3</span>
                            <span class="stat-label">Avaliações</span>
                        </section>
                    </section>
                </section>

                <!-- Menu de Opções -->
                <section class="menu-section">
                    <section class="menu-grid">
                        <a href="#" class="menu-item" onclick="showSection('personal-info')">
                            <section class="menu-icon"><img src="imagens/icone informaçao.png" alt="Informações"></section>
                            <section class="menu-content">
                                <h3>Informações Pessoais</h3>
                                <p>Editar dados pessoais</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('orders')">
                            <section class="menu-icon"><img src="imagens/caminhao.png" alt="Pedidos"></section>
                            <section class="menu-content">
                                <h3>Meus Pedidos</h3>
                                <p>Histórico de compras</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('favorites')">
                            <section class="menu-icon"><img src="imagens/coraçao de fav.png" alt="Favoritos"></section>
                            <section class="menu-content">
                                <h3>Favoritos</h3>
                                <p>Itens salvos</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('addresses')">
                            <section class="menu-icon"><img src="imagens/icone sacola.png" alt="Endereços"></section>
                            <section class="menu-content">
                                <h3>Endereços</h3>
                                <p>Gerenciar endereços</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('payment')">
                            <section class="menu-icon"><img src="imagens/cartao.png" alt="Pagamento"></section>
                            <section class="menu-content">
                                <h3>Pagamento</h3>
                                <p>Cartões e métodos</p>
                            </section>
                        </a>

                        <a href="#" class="menu-item" onclick="showSection('notifications')">
                            <section class="menu-icon"><img src="imagens/icone blog.png" alt="Notificações"></section>
                            <section class="menu-content">
                                <h3>Notificações</h3>
                                <p>Preferências</p>
                            </section>
                        </a>
                    </section>
                </section>
            </section>

            <!-- Seções de Conteúdo -->
            <section id="personal-info" class="content-section" style="display: none;">
                <section class="section-wrapper">
                    <section class="section-header">
                        <h2>Informações Pessoais</h2>
                        <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                    </section>
                
                <form class="profile-form" method="POST" action="/perfilcliente" enctype="multipart/form-data">
                    <section class="form-row">
                        <section class="form-group">
                            <label for="first-name">Nome</label>
                            <input type="text" id="first-name" name="firstName" value="Maria" required>
                        </section>
                        <section class="form-group">
                            <label for="last-name">Sobrenome</label>
                            <input type="text" id="last-name" name="lastName" value="Silva" required>
                        </section>
                    </section>
                    
                    <section class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" value="maria.silva@email.com" required>
                    </section>
                    
                    <section class="form-row">
                        <section class="form-group">
                            <label for="phone">Telefone</label>
                            <input type="tel" id="phone" name="phone" value="(11) 99999-9999" required>
                        </section>
                        <section class="form-group">
                            <label for="birth-date">Data de Nascimento</label>
                            <input type="date" id="birth-date" name="birth-date" value="">
                        </section>
                    </section>
                    
                    <section class="form-group">
                        <label for="bio">Sobre mim</label>
                        <textarea id="bio" name="bio" placeholder="Conte um pouco sobre você...">Apaixonada por moda sustentável e peças únicas!</textarea>
                    </section>
                    
                    <button type="submit" class="save-btn">Salvar Alterações</button>
                </form>
                </section>
            </section>

            <section id="orders" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Pedidos</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="empty-state">
                    <img src="imagens/icone saco.png" alt="Sem pedidos" class="empty-icon">
                    <h3 class="empty-title">Nenhum pedido ainda</h3>
                    <p class="empty-text">Que tal explorar nossa coleção e fazer sua primeira compra?</p>
                    <a href="/categorias" class="empty-btn">Explorar Produtos</a>
                </section>
            </section>

            <section id="favorites" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Favoritos</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="favorites-grid" style="display: none;"></section>
                <section class="empty-state">
                    <img src="imagens/icone coraçao.png" alt="Sem favoritos" class="empty-icon">
                    <h3 class="empty-title">Nenhum favorito ainda</h3>
                    <p class="empty-text">Explore nossa coleção e favorite suas peças preferidas!</p>
                    <a href="/categorias" class="empty-btn">Descobrir Peças</a>
                </section>
            </section>

            <section id="addresses" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Meus Endereços</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="addresses-list">
                    <section class="address-item">
                        <section class="address-info">
                            <h3>Casa</h3>
                            <p>Rua das Flores, 123</p>
                            <p>Vila Madalena - São Paulo, SP</p>
                            <p>CEP: 05435-000</p>
                        </section>
                        <section class="address-actions">
                            <button class="edit-address-btn" onclick="editAddress(1)">Editar</button>
                            <button class="delete-address-btn" onclick="deleteAddress(1)">Excluir</button>
                        </section>
                    </section>

                    <button class="add-address-btn" onclick="addNewAddress()">+ Adicionar Novo Endereço</button>
                </section>
            </section>

            <!-- Modal de Endereço -->
            <section id="address-modal" class="address-modal">
                <section class="address-modal-content">
                    <section class="modal-header">
                        <h3 id="modal-title">Adicionar Novo Endereço</h3>
                        <button class="close-modal" onclick="closeAddressModal()">×</button>
                    </section>
                    
                    <form class="address-form" onsubmit="saveAddress(event)">
                        <section class="form-group">
                            <label for="address-name">Nome do Endereço</label>
                            <input type="text" id="address-name" name="addressName" placeholder="Ex: Casa, Trabalho" required>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-cep">CEP</label>
                                <input type="text" id="address-cep" name="cep" placeholder="00000-000" value="" maxlength="9" required>
                            </section>
                            <section class="form-group">
                                <label for="address-number">Número</label>
                                <input type="text" id="address-number" name="number" placeholder="123" value="" required>
                            </section>
                        </section>
                        
                        <section class="form-group">
                            <label for="address-street">Rua</label>
                            <input type="text" id="address-street" name="street" placeholder="Nome da rua" value="" required>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-neighborhood">Bairro</label>
                                <input type="text" id="address-neighborhood" name="neighborhood" placeholder="Nome do bairro" value="" required>
                            </section>
                            <section class="form-group">
                                <label for="address-city">Cidade</label>
                                <input type="text" id="address-city" name="city" placeholder="Nome da cidade" value="" required>
                            </section>
                        </section>
                        
                        <section class="form-row">
                            <section class="form-group">
                                <label for="address-state">Estado</label>
                                <select id="address-state" name="state" required>
                                    <option value="">Selecione o estado</option>
                                    <option value="SP">São Paulo</option>
                                    <option value="RJ">Rio de Janeiro</option>
                                    <option value="MG">Minas Gerais</option>
                                    <option value="RS">Rio Grande do Sul</option>
                                    <option value="PR">Paraná</option>
                                    <option value="SC">Santa Catarina</option>
                                    <option value="BA">Bahia</option>
                                    <option value="GO">Goiás</option>
                                    <option value="PE">Pernambuco</option>
                                    <option value="CE">Ceará</option>
                                </select>
                            </section>
                            <section class="form-group">
                                <label for="address-complement">Complemento</label>
                                <input type="text" id="address-complement" name="complement" placeholder="Apto, Bloco, etc.">
                            </section>
                        </section>
                        
                        <section class="modal-actions">
                            <button type="button" class="cancel-btn" onclick="closeAddressModal()">Cancelar</button>
                            <button type="submit" class="save-btn">Salvar Endereço</button>
                        </section>
                    </form>
                </section>
            </section>

            <section id="payment" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Métodos de Pagamento</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="payment-methods">
                    <section class="empty-state">
                        <p>Nenhum método de pagamento cadastrado.</p>
                    </section>
                    <button class="add-payment-btn" onclick="addNewPayment()">+ Adicionar Cartão</button>
                </section>
            </section>

            <section id="notifications" class="content-section" style="display: none;">
                <section class="section-header">
                    <h2>Notificações</h2>
                    <button class="back-btn" onclick="hideAllSections()">← Voltar</button>
                </section>
                
                <section class="notifications-settings">
                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Ofertas e Promoções</h3>
                            <p>Receba notificações sobre descontos especiais</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </section>

                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Status do Pedido</h3>
                            <p>Atualizações sobre seus pedidos</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </section>

                    <section class="notification-item">
                        <section class="notification-info">
                            <h3>Novos Produtos</h3>
                            <p>Seja a primeira a saber sobre novidades</p>
                        </section>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </section>
                </section>
            </section>
        </section>
    </main>
    
    <!-- Footer -->
    <footer class="footer">
        <img src="imagens/logo.png" alt="Vintélo" class="footer-image">
        <section class="social-media">
            <p>Siga-nos nas redes sociais</p>
            <ul class="social-links">
                <li><a href="https://www.instagram.com/vintelobrechos" target="_blank" class="social-link"><img src="imagens/Instagram.png" alt="Instagram"></a></li>
                <li><a href="https://facebook.com" target="_blank" class="social-link"><img src="imagens/Facebook.png" alt="Facebook"></a></li>
                <li><a href="#" class="social-link"><img src="imagens/Pinterest.png" alt="Pinterest"></a></li>
            </ul>
        </section>
        <p class="copyright">&copy; 2024 Vintélo. Todos os direitos reservados.</p>
    </footer>

    <script src="/js/perfil-cliente.js"></script>
    <script src="/js/perfil-autenticado.js"></script>
    <script src="/js/navegacao.js"></script>
</body>
</html>