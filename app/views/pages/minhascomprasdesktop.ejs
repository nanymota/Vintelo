</head>
<body>
      <!-- Cabeçalho desktop -->
       <section class="oculto-mobile">
        <header1>
          <section class="top-bar">
              <p class="banner">10% OFF na primeira compra</p>
          </section>
          <section class="main-header">
              <a href="/homecomprador">
              <img src="imagens/logo.png" class="img-logo">
              </a>
              <nav>
                  <a href="/categorias">Vestidos</a>
                  <a href="/categorias">Saias</a>
                  <a href="/categorias">Blusas</a>
                  <a href="/categorias">Calças</a>
                  <a href="/categorias">Outros</a>
              </nav>
              <section class="search-profile">
                  <form>
                      <input type="text" placeholder="Buscar...">
                  </form>
                  <ul>
                      <li><a href="/perfilcliente" ></a><img src="imagens/icone sem cadastro.png" class="maria"> </li>
                      <li><a href="/criarbrecho" ></a><img src="imagens/add brecho.png" class="img-tamanho"> </li>
                      <li><a href="/favoritos" ><img src="imagens/icone coraçao.png" class="img-tamanho"> </a></li>
                  </ul>
              </section>
          </section>
      </header>
       </section>

    <!-- Cabeçalho -->
     <section class="oculto-desktop">
    <header>
        <nav class="grid">
          <a href="javascript:void(0)" onclick="goBack()">
            <img src="imagens/seta.png" alt="Seta Voltar">
          </a>
          <img src="imagens/logo.png" alt="Logo">
          <a href="javascript:void(0)" onclick="goBack()">
            <img src="imagens/icone sem cadastro.png" alt="Carrinho">
          </a>
        </nav>
      </header>
    </section>


    <!-- Lista de Produtos -->
     <main>
        <center><img src="imagens/favoritos.png" class="img-responsiva"></center>
        <!-- Informações de lista -->
        <section class="list-info">
            <p class="favorite-text"> Veja suas compras</p>
        </section>
        

        
        <!-- Layout com Sidebar (Desktop) -->
        <section class="content-layout oculto-mobile">
            <aside class="sidebar-filters">
                <section class="filter-group">
                    <h3>Categoria</h3>
                    <label><input type="checkbox"> Vestidos</label>
                    <label><input type="checkbox"> Saias</label>
                    <label><input type="checkbox"> Blusas</label>
                    <label><input type="checkbox"> Calças</label>
                    <label><input type="checkbox"> Outros</label>
                </section>
                
                <section class="filter-group">
                    <h3>Preço</h3>
                    <label><input type="checkbox"> Até R$ 30</label>
                    <label><input type="checkbox"> R$ 30 - R$ 60</label>
                    <label><input type="checkbox"> R$ 60 - R$ 100</label>
                    <label><input type="checkbox"> Acima de R$ 100</label>
                </section>
                
                <section class="filter-group">
                    <h3>Tamanho</h3>
                    <label><input type="checkbox"> PP</label>
                    <label><input type="checkbox"> P</label>
                    <label><input type="checkbox"> M</label>
                    <label><input type="checkbox"> G</label>
                    <label><input type="checkbox"> GG</label>
                </section>
                
                <section class="filter-group">
                    <h3>Cor</h3>
                    <label><input type="checkbox"> Preto</label>
                    <label><input type="checkbox"> Branco</label>
                    <label><input type="checkbox"> Rosa</label>
                    <label><input type="checkbox"> Marrom</label>
                    <label><input type="checkbox"> Outros</label>
                </section>
            </aside>
            
            <main class="product-list">
        <article class="product">
            <img src="imagens/conjunto.png" alt="Saia Branca">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Saia Branca</p>
            <p>R$25,00</p>
        </article>

        <article class="product">
            <img src="imagens/saia preta brilhante.png" alt="Saia Preta">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Saia Preta Com Brilho</p>
            <p>R$30,00</p>
        </article>

        <article class="product">
            <img src="imagens/saia marrom.png" alt="Saia Marrom">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Saia De Veludo Marrom</p>
            <p>R$25,00</p>
        </article>

        <article class="product">
            <img src="imagens/calça reta.png" alt="Calça Jeans">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Calça Reta Jeans Clara</p>
            <p>R$49,99</p>
        </article>

        <article class="product">
            <img src="imagens/saia preta brilhante.png" alt="Conjunto Preto">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Conjunto saia preta c/ brilho + Top preto</p>
            <p>R$57,00</p>
        </article>

        <article class="product">
            <img src="imagens/vestido pink.png" alt="Vestido Rosa">
            <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
            <p>Vestido rosa longo</p>
            <p>R$15,00</p>
        </article>
        </main>
      </main>
                        <!-- Botão de Ver Mais Mobile -->
        <section class="oculto-mobile">
        <nav class="load-more">
            <button>Ver mais</button>
        </nav>
            </main>
        </section>
        </section>
        <!-- Layout Mobile -->
        <section class="oculto-desktop">
            <main class="product-list">
                <article class="product">
                    <img src="imagens/conjunto.png" alt="Saia Branca">
                    <button class="favorite"><img src="imagens/coraçao de fav2.png"></button>
