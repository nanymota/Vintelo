          <section class="carousel-indicators">
            <section class="active"></section>
          </section>
        </section>
      </section>
      <!--                                      Carrossel das categorias                                              -->
      
      <!--  Mobile -->
      <nav class="category-nav category-nav-mobile">
      <br>
      <span class="garimpe-text">Garimpe na</span><br>
